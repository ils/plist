<h1>Listing requests</h1>

<table>
  <tr>
    <th>Coach or Athlete Name</th>
    <th>Game Date</th>
    <th>Guest 1</th>
    <th>Guest 2</th>
    <th>Guest 3</th>
    <th>Guest 4</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%= request.rname %></td>
    <td><%= request.gdate %></td>
    <td><%= request.tname1 %></td>
    <td><%= request.tname2 %></td>
    <td><%= request.tname3 %></td>
    <td><%= request.tname4 %></td>
    <td><%= link_to 'Show', request %></td>
    <td><%= link_to 'Edit', edit_request_path(request) %></td>
    <td><%= link_to 'Destroy', request, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

